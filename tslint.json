{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "no-empty-interface": false,
    "no-unused-variable": true,
    "curly": true,
    "member-access": [
      true,
      "no-public"
    ],
    "no-namespace": false,
    "no-console": false,
    "interface-name": false,
    "max-line-length": [
      true,
      200
    ],
    "import-name": false,
    "strictNullChecks": false,
    "whitespace": false,
    "member-ordering": [
      true,
      {
        "order": "fields-first"
      }
    ],
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "ordered-imports": true,
    "object-literal-sort-keys": false,
    "no-empty": [
      true,
      "allow-empty-functions"
    ]
  }
}